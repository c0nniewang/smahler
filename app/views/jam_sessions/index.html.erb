<div class="profile deep-orange lighten-2 z-depth-1">
  <h1 class="grey-text text-lighten-5 center">Jam Sessions</h1>
</div>

<div class="divider"></div>
<div class="section">
  <div class="row">
    <div class= "container">
      <div class= "col s6">
        <%= form_tag(jam_sessions_path, method: "get") do %>
          <%= text_field_tag(:search_city, params[:search_city], placeholder: "Search by City:") %>
              <a class="waves-effect waves-light btn"><%= submit_tag("search", name: nil) %></a>
          <% end %>
        </div>
        <div class= "col s6">
          <%= form_tag(jam_sessions_path, method: "get") do %>
            <%= text_field_tag(:search_genre, params[:search_genre], placeholder: "Search by Genre:") %>
              <a class="waves-effect waves-light btn"><%= submit_tag("search", name: nil) %></a>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div> 

<div class="divider"></div>
<div class="section">
  <div class="container">
    <h2 class="grey-text">All Jam Sessions</h2>
      <h5 class="teal-text">Click link to join Jam!</h5>
    </div>
  </div>
<div class="row" >
  <div class="container">
    <ul>
    <% @jamsessions.each do |js| %>
      <div class="row">
        <div class="col s12 m5">
          <div class="card-panel white">
              <h4 class="white-text"><%=link_to js.title, jam_session_path(js)%></h4><br />
              <h5 class="bold-text">Jam Description: </h5>
              <p> <%= js.description %> </p>
            </div>
          </div>
        </div>
      <% end %>
    </ul>
  </div>
</div>
