<div class="container-transbox bg-1">
  <div class="row">
      <div class="col">
        <h3>Create Your Jam Session:</h3>
        <%= form_for @jamsession do |f| %>
          <div class="col-sm-6">
            <h5><b>Title</b></h5>
            <%= f.text_field :title %><br>
          </div>
          <div class="col-sm-6">
            <h5><b>Event Date:</b></h5>
            <%= f.date_field :datetime %><br>
          </div>
          <div class="col-sm-12">
            <h5><b>What is your jam vision?</b></h5>
          <div class="col-sm-12">
            <%= f.text_area :description %><br></div>
          </div>
          <div class="col-sm-12">
            <h5><b>Choose your city:</b></h5></div>
            <%= f.collection_radio_buttons :city_id, City.all, :id, :name %><br>
          </div>
          <div class="col-sm-12">
            <h5><b>Choose your Genre:</b></h5></div>
              <%= f.collection_radio_buttons :genre_id, Genre.all, :id, :name %><br>
          </div>
          <div class="col-sm-12">
              <h5><b>What instrumentation do you need?</b></h5>
            <div class="checkbox">
              <label><input type="checkbox" id="test5" name="instrument[instrument_ids][]" value="1" />Voice</label></div>
            <div class="checkbox">
              <label><input type="checkbox" id="test6" name="instrument[instrument_ids][]" value="2" />Violin</label></div>
            <div class="checkbox">
              <label><input type="checkbox" id="test13" name="instrument[instrument_ids][]" value="3" />Piano</label></div>
            <div class="checkbox">
              <label><input type="checkbox" id="test14" name="instrument[instrument_ids][]" value="4" />Bass</label></div>
            <div class="checkbox">
              <label><input type="checkbox" id="test7" name="instrument[instrument_ids][]" value="5" />Auxiliary Percussion</label></div>
            <div class="checkbox">
              <label><input type="checkbox" id="test8" name="instrument[instrument_ids][]" value="6" />Drums</label></div>
            <div class="checkbox">
              <label><input type="checkbox" id="test9" name="instrument[instrument_ids][]" value="7" />Guitar</label></div>
            <div class="checkbox">
              <label><input type="checkbox" id="test10" name="instrument[instrument_ids][]" value="8" />Saxophone</label></div>
            <div class="checkbox">
              <label><input type="checkbox" id="test11" name="instrument[instrument_ids][]" value="9" />Trumpet</label></div>
            <div class="checkbox">
              <label><input type="checkbox" id="test12" name="instrument[instrument_ids][]" value="10" />Trombone</label></div>
          </div>
        <%= f.submit %>
      </div>
    </div>
  <% end %>
</div>


